    <h4 class="searchh4">no results, try again</h4>
  </div>
<%end%>
<% unless @search.organizations_name == nil%>
  <div class="div-search">
    <% @search.organizations_name.each do |org| %>
      <h4 class="searchh4"><%=link_to org.name, organization_path(org)%></h4>
    <%end%>
  </div>
<%end %>

