<%= stylesheet_link_tag 'search'%>
<h1 class="searchh1"> Search Results </h1>

<h2 class="searchh2">* Results by User:</h2>
<br/>
<h3 class="searchh3">By Full Name:</h3>
<% unless @search.users_fullname != nil %>
  <div class="div-search">
    <h4 class="searchh4">no results, try again</h4>
  </div>
<%end%>
<% unless @search.users_fullname == nil%>
  <div class="div-search">
    <% @search.users_fullname.each do |user| %>
      <h4 class="searchh4"><%=link_to user.full_name, users_path(user)%></h4>
    <%end%>
  </div>
<%end %>
<br/>
<h3 class="searchh3">By UserName:</h3>
<% unless @search.users_username != nil %>
  <div class="div-search">
    <h4 class="searchh4">no results, try again</h4>
  </div>
<%end%>
<% unless @search.users_username == nil%>
  <div class="div-search">
    <% @search.users_username.each do |user| %>
      <h4 class="searchh4"><%=link_to user.username, users_path(user)%></h4>
    <%end%>
  </div>
<%end %>
<br/>

<h2 class="searchh2">* Results by Organization:</h2>
