<div class="row ml-0 mt-3">
  <h2 class="edith2">New Chat</h2>
</div>

<div class="div-2">
  <%= form_with model: @sent_message, local: true do |form| %>
    <div class="div-edit">
      <%= form.label :date %>
      <br/>
      <%= form.datetime_local_field :date, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :from_email %>
      <br/>
      <%= form.text_area :to_email, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :subject %>
      <br/>
      <%= form.text_area :subject, class:"from-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :message %>
      <br/>
      <%= form.text_area :message, class:"from-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :to_user_id %>
      <br/>
      <%= form.collection_select(:user_id, User.all.order(username: :asc), :id, :username, {}, { class: "form-control" }) %>
    </div>
    <div class="div-edit">
      <%= form.submit "Create", class: ["btn"] %>
      <%= link_to "Back", :back, class: ["btn"] %>
    </div>
  <% end %>
</div>
