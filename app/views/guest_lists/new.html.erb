
<div class="row ml-0 mt-3">
  <%= stylesheet_link_tag 'add-guest'%>
  <h2 class="edith2">New Guests</h2>
  <p class="p-edit">Please select the guests for your event:</p>
</div>
<div class="div-2">
    <%= form_with model: @guest_list, local: true do |form| %>
      <div class="div-edit">
        <%= form.label :user_id %>
        <br/>
        <%= form.collection_select(:user_id, User.where("id NOT LIKE ?", current_user.id).order(name: :asc), :id, :username, {}, { class: "form-control" }) %>
      </div>
      <div class="div-edit">
        <%= form.label :event_id %>
        <br/>
        <%= form.collection_select(:event_id, Event.where(id: EventCreator.where(user_id: current_user.id).select(:event_id)).order(name: :asc), :id, :title, {}, { class: "form-control" }) %>
      </div>
      <div class="div-edit">
        <%= form.submit "Create", class: ["btn"] %>
      </div>
    <%end%>
</div>

<button class="btn11 info-1" ><%= link_to 'Back', _back_url %></button>