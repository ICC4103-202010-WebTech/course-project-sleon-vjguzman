
<div class="container-fluid">
  <div class="row">
    <aside class="col-sm-2" id="customer_info">
      <% unless user_signed_in? == false %>
        <div class="card mt-4">
          <div class="card-body">
            <h5 class="apph5">Welcome, <%= current_customer.name %></h5>
          </div>
        </div>
      <%end %>
      <% unless admin_signed_in? == false %>
        <h5 class="apph5">Welcome Admin%></h5>
      <% end %>
    </aside>
    <main class="col-sm-10" id="main_content">
      <% if notice.present? %>
        <div class="row ml-0 mt-3" role="alert">
          <div id="notice" class="alert alert-success"><%= notice %></div>
        </div>
      <% end %>
      <% if alert.present? %>
        <div class="row ml-0 mt-3" role="alert">
          <div id="notice" class="alert alert-success"><%= notice %></div>
        </div>
      <% end %>
      <%= yield %>
    </main>
  </div>
</div>
<h2 class="homeh2">Upcoming Events</h2>
<%= stylesheet_link_tag 'homepage'%>
<% @upcoming_events.each do |x| %>
<div class="homediv">
  <% unless x.banner_picture.attached? == true%>
    <span class="imageleft"><%= link_to image_tag("xd.jpeg", width: '300px') %></span>
  <% end %>
  <% unless x.banner_picture.attached?  == false%>
    <span class="imageleft"><%= link_to image_tag(url_for(x.banner_picture), width: '300px') %></span>
  <% end %>
  <h4 class="homeh4"><%= x.title %></h4>
  <h5 class="homeh5"><%= x.description %></h5>
  <h5 class="homeh5"><%= x.final_date %></h5>
  <h5 class="homeh5"><%= x.location %></h5>
  <button class="buttonhome"><%= link_to 'View', event_path(x) %></button>
</div>

<%end %>