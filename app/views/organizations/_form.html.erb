<p id="notice"><%= notice %></p>
<div class="div-2">
  <%= form_with model: organization, local: true do |form| %>
    <div class="div-edit">
      <%= form.label :name %>
      <br/>
      <%= form.text_area :name, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :description %>
      <br/>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :banner %>
      <br/>
      <%= form.file_field :banner, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.submit "Update", class: ["btn"] %>
      <%= link_to "Back", :back, class: ["btn"] %>
    </div>
  <% end %>
</div>
