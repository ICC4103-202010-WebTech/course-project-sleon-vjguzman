<p id="notice"><%= notice %></p>
<div class="row ml-0 mt-3">
  <h2 class="edith2">New Chat</h2>
</div>

<div class="div-2">
  <%= form_with model: @mailbox, local: true do |form| %>
    <div class="div-edit">
      <%= form.label :date %>
      <br/>
      <%= form.datetime_local_field :date, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :from_message %>
      <br/>
      <%= form.text_area :from_message, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :from_username %>
      <br/>
      <%= form.text_area :from_username, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :final_date %>
      <br/>
      <%= form.text_area :final_date %>
    </div>
    <div class="div-edit">
      <%= form.label :subject %>
      <br/>
      <%= form.text_area :subject, class:"from-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :user_id %>
      <br/>
      <%= form.collection_select(:user_id, User.all.order(username: :asc), :id, :username, {}, { class: "form-control" }) %>
    </div>
    <div class="div-edit">
      <%= form.submit "Create", class: ["btn"] %>
      <%= link_to "Back", :back, class: ["btn"] %>
    </div>
  <% end %>
</div>

