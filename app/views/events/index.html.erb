<p id="notice"><%= notice %></p>

<h3>User: <%=@user.full_name%> </h3>
<br/>
<table>
  <tr>
    <th>Description</th>
    <th>Location</th>
    <th> Final Date </th>

  </tr>
  <style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
  <tbody>
  <% @eventos.each do |x| %>
    <tr>

      <td><%= x.description %></td>
      <td><%= x.location %></td>
      <td><%= x.final_date %></td>
      <td><%= link_to 'See Event Page',event_path(x) %></td>
      <td><%= link_to 'See Comments', comment_path(x) %></td>
      <td><%= link_to 'Edit', edit_event_path(x) %></td>
      <td><%= link_to 'Destroy', x, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br/>
<h6 align="center"><%= link_to 'New Event', new_event_path %></h6>
<h6 align="center"><%= link_to 'Back', events_path %></h6>

