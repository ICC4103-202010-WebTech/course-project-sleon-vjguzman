<div class="row ml-0 mt-3">
  <h2 class="edith2">New Event</h2>
  <p class="p-edit">Please enter the required information to create an event:</p>
</div>

<div class="div-2">
  <%= form_with model: @event, local: true do |form| %>
    <div class="div-edit">
      <%= form.label :title %>
      <br/>
      <%= form.text_area :title, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :description %>
      <br/>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :location %>
      <br/>
      <%= form.text_area :location, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :final_date %>
      <br/>
      <%= form.datetime_local_field :final_date %>
    </div>
    <div class="div-edit">
      <%= form.label :choice_of_date_id %>
      <br/>
      <%= form.collection_select(:choice_of_date_id, ChoiceOfDate.all.order(description: :asc), :id, :description, {}, { class: "form-control" }) %>
    </div>
    <div class="div-edit">
      <%= form.label :privacy_id %>
      <br/>
      <%= form.collection_select(:privacy_id, Privacy.all.order(name: :asc), :id, :name, {}, { class: "form-control" }) %>
    </div>
    <div class="div-edit">
      <%= form.label :banner_picture %>
      <br/>
      <%= form.file_field :banner_picture, multiple: true, direct_upload: true, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :images %>
      <br/>
      <%= form.file_field :images, multiple: true, direct_upload: true, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :videos %>
      <br/>
      <%= form.file_field :videos, multiple: true, direct_upload: true, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.label :files %>
      <br/>
      <%= form.file_field :files, multiple: true, direct_upload: true, class: "form-control" %>
    </div>
    <div class="div-edit">
      <%= form.submit "Create", class: ["btn"] %>
    </div>
  <% end %>
</div>

