<%= stylesheet_link_tag 'event-page'%>
<h1 class="eventpageh1"><%= @event_name.first.description%> </h1>
<br/>
    <div class="eventpagediv">
      <% unless @event_name.banner.attached? == false%>
        <span class="imageleft"><%= link_to image_tag("xd.jpeg") %></span>
      <% end %>
      <% unless @event_name.banner.attached?  == true%>
        <span class="imageleft"><%= link_to image_tag(url_for(@event_name.banner)) %></span>
      <% end %>

      <h4 class="eventpageh4p">Date: <%= @event_date.first.final_date %></h4>
      <h4 class="eventpageh4">Location: <%= @event_location.first.location %></h4>
      <h4 class="eventpageh4">Create By: <%= @user.full_name %></h4>
    </div>

