<p id="notice"><%= notice %></p>
<%= stylesheet_link_tag 'seedetails-profile'%>

<h2 class="h2details"> <%= @first_user.full_name %> </h2>
<% unless @first_user.profile_picture.attached? == true%>
  <span class="imageleft1"><%= link_to image_tag("xd.jpeg", width: '300px') %></span>
<% end %>
<% unless @first_user.profile_picture.attached?  == false%>
  <span class="imageleft1"><%= link_to image_tag(url_for(@first_user.profile_picture), width: '300px') %></span>
<% end %>

    <h4 class="h4detailsp"><%= @first_user.username %></h4>
    <h4 class="h4details"><%= @first_user.short_bio %></h4>
    <h4 class="h4details"><%= @first_user.location %></h4>
    <h4 class="h4details"><%= Organization.where(id: @user_member).select(:name).first.name %></h4>
    <h4 class="h4details2"> Email: <%= @first_user.email %></h4>
    <h4 class="h4details2"> Password: <%= @first_user.password %></h4>
<br/>
<aside class="botones">
  <button class="buttondetails"><%= link_to 'Edit', edit_user_path(@first_user) %></button>
<button class="back"><%= link_to 'Back', users_path %></button>
</aside>
